<Page x:Class="slv_authApp.Screens.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:slv_authApp.Screens"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <StackPanel>
        <Label Margin="1 1 1 1"  Content="Login"></Label>
        <TextBox Margin="1 1 1 1" x:Name="Login1"></TextBox>
        <Label Margin="1 1 1 1" Content="Password"></Label>
        <PasswordBox Margin="1 1 1 1" x:Name="Password"></PasswordBox>
        <Label Margin="1 1 1 1" Content="Repeat password"></Label>
        <PasswordBox Margin="1 1 1 1" x:Name="Password2"></PasswordBox>
        <Button Margin="1 1 1 1" Click="Button_Click" Content="OK"></Button>
        <Button Margin="1 1 1 1" Height="50" Width="50" HorizontalAlignment="Left" Click="Button_Click_1" Content="←" FontSize="40"></Button>
    </StackPanel>
</Page>
